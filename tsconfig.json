{
  "strict":true,
  "compileOnSave": false,
  "compilerOptions": {
    "module":"esnext",
    "target": "ES2015",
    "lib": [
      "es5",
      "es6",
      "dom",
      "ES2017"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir":"./dist",
